{
  "name": "invoicing",
  "version": "1.5.1",
  "description": "Order and invoice generator",
  "license": "MIT",
  "main": "dist/lib/generator.js",
  "scripts": {
    "clean": "rm -rf coverage dist tmp",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "npm run test-only",
    "test-only": "jest --coverage",
    "test:watch": "jest --watch",
    "build": "babel src/**/*.js -d dist",
    "build:watch": "babel --watch src/**/*.js -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rimiti/invoicing.git"
  },
  "keywords": [
    "node",
    "order",
    "invoice",
    "html",
    "pdf",
    "generator"
  ],
  "author": {
    "name": "Dimitri DO BAIRRO",
    "email": "dimitri.dobairro@dimsolution.com",
    "url": "dimsolution.com"
  },
  "bugs": {
    "url": "https://github.com/rimiti/invoicing/issues"
  },
  "engines": {
    "node": ">=6"
  },
  "homepage": "https://github.com/rimiti/invoicing#readme",
  "dependencies": {
    "html-pdf": "^2.2.0",
    "i18n-factory": "0.0.2",
    "json-override": "^0.2.0",
    "moment": "^2.18.1",
    "pug": "^2.0.0-rc.4",
    "source-map-support": "^0.5.0"
  },
  "devDependencies": {
    "babel-core": "~6.26.0",
    "babel-eslint": "~8.0.1",
    "babel-jest": "~21.2.0",
    "babel-plugin-transform-async-to-generator": "~6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "~6.26.0",
    "babel-plugin-transform-runtime": "~6.23.0",
    "babel-preset-stage-3": "~6.24.1",
    "eslint-config-airbnb-base": "~12.0.2",
    "eslint-plugin-import": "~2.7.0",
    "jest": "~21.2.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}
